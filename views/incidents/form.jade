
extends ../../public/templates/base.jade

block title
  title Report Incident

block content
  //This is the form for adding new documents to the database.
  h2 Report Incident of Violence
  form(action="/incidents" method="POST")
    p
      label Rally Location
      br
      input(type="text" value="" name="city" placeholder="City")
      input(type="text" value="" name="state" placeholder="State")#state
      br
      input(type="text" value="" name="lat" placeholder="Latitude")
      br
      input(type="text" value="" name="long" placeholder="Longitude")
    p
      label Rally Date
      br
      input(type="text" value="" name="date" placeholder="mm/dd/yyyy")
    p
      label Incident Category
      br
      select(name="type")
        option(value="Verbal abuse") Verbal Abuse
        option(value="Beating") Beating
        option(value="Shoving") Shoving
        option(value="Racial slurs") Racial Slurs 
        option(value="Sucker-punch") Sucker-punch 
    p
      label YouTube Video ID
      br
      input(type="text" name="video" value="" placeholder="ID")
    p
      label Description of Incident
      br
      textarea(rows="4" cols="50" name="description")
    
    button.btn.btn-default Submit Report
